{
  "name": "wr-tactics",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "prepare": "node .husky/install.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "ui/**/*.{ts,tsx}": [
      "npm run lint:fix --workspace=ui",
      "npm run format --workspace=ui"
    ],
    "api/**/*.py": [
      "node lint-python.js"
    ]
  }
}
